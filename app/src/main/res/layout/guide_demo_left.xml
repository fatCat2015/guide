<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clContent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#80000000"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/ivHighlight"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">
    </ImageView>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/ivHighlight"
        app:layout_constraintBottom_toBottomOf="@+id/ivHighlight"
        app:layout_constraintRight_toLeftOf="@id/ivHighlight"
        android:text="点这里,让你升天,不点不是人"
        android:layout_height="wrap_content">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>